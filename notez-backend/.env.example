# NoteZ Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration (REQUIRED)
# MongoDB connection string
# For local: mongodb://localhost:27017/notez
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/notez?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/notez

# JWT Configuration (REQUIRED)
# Generate a strong secret: openssl rand -base64 32
# Minimum 32 characters for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
# For development: http://localhost:3000
# For production: https://your-frontend-domain.com
# Multiple origins: https://domain1.com,https://domain2.com
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
BASE_URL=http://localhost:3001

# AI Configuration (Optional)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Email Configuration (Optional - for future email features)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@notez.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Redis Configuration (Optional - for future caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
